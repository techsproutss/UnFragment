<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/dynamic_fragment_bg">

    <ImageView
        android:id="@+id/dynamicIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_dynamic_fragment"
        android:contentDescription="Dynamic Fragment Icon" />

    <TextView
        android:id="@+id/dynamicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic Content"
        android:textColor="@color/dynamic_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />
</LinearLayout>
