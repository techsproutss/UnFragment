<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/static_fragment_bg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/staticIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_static_fragment"
        android:contentDescription="Static Fragment Icon"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/staticFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Static Fragment Header"
        android:textColor="@color/static_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
